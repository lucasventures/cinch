<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity"
    android:background="@drawable/intro_five">


        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:background="@drawable/card_liner"
            android:padding="5dp">


                <EditText
                    android:id="@+id/name"
                    android:windowSoftInputMode="stateHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:imeActionLabel="next"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="start" />

                <EditText
                    android:id="@+id/monthly"
                    android:windowSoftInputMode="stateHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monthly Income"
                    android:imeActionLabel="next"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="start" />



                <EditText
                    android:id="@+id/monthly_exp"
                    android:windowSoftInputMode="stateHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monthly Expenses"
                    android:imeActionLabel="next"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="start" />

                <EditText
                    android:id="@+id/savings"
                    android:windowSoftInputMode="stateHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monthly Savings Goal"
                    android:imeActionLabel="next"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="start" />

        </LinearLayout>

    <Button
        android:id="@+id/next"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="done"
        android:textColor="@color/white"
        android:background="@color/pie_green"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s get to it, then."
        android:id="@+id/lets"
        android:textColor="@color/white"
        android:layout_above="@+id/login_form"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
